extends ../base.pug

block variables
  - var template = 'detail';

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=product.data.product_image.alt src=product.data.product_image.url)

      .detail__information
        p.product__information__collection=product.data.collection.data.title

        h1.detail__information__title=product.data.title

        .detail__information__content
          .detail__information__highlights
            each highlights in product.data.highlights
              p.detail__information__highlight
                svg.detail__information__highlight__icon
                  use(xlink:href=`sprite-${highlights.highlights_icon.toLowerCase()}`)

                .detail__information__highligh__text=highlights.highlights_text

        .detail__information__list
          each item in product.data.information
            p.detail__information__item
              strong.detail__information__item__title=item.information_label
              span.detail__information__item__decription=item.information_description

        a.detail__information__link(href=product.data.shop_url.url target="_blank")=product.data.shop_url_text
